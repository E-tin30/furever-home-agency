<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Furever Home - Login to Give Away Pet</title>
  <link rel="stylesheet" href="/css/AdoptionAgency.css">
  <script src="/scripts/UserAndPass.js"></script>
</head>
    <body>

        <%- include('partials/header.ejs'); %>

        <div class="container">
            <div id="side-menu">
                <%- include('partials/sidemenu.ejs'); %>
            </div>

            <div id="content">
                <h2>Login to Continue</h2>
                <form action="/GiveAwayLogin" method="post" onsubmit="validateForm(event)">
                    <label for="username">Username:</label>
                    <input type="text" id="username" name="username" required>
                    <br>
                    <label for="password">Password:</label>
                    <input type="password" id="password" name="password" required>
                    <br>
                    <input type="submit" value="Login">
                </form>

                <p><strong>Note:</strong> You must be logged in to give away a pet.</p>
            </div>
        </div>

        <%- include('partials/footer.ejs'); %>

    </body>
</html>
